---
// @pages/index.astro
import Main from '@/layouts/Main.astro';
import Section from '@/layouts/Section.astro';
import Aside from '@/layouts/Aside.astro';
import WebsiteHeader from '@/components/wrappers/WebsiteHeader.astro';
import BlogCarousel from '@/components/wrappers/BlogCarousel.astro';
import WebsiteNavbar from '@/components/wrappers/WebsiteNavbar.astro';
import ThemeToggle from '@/components/wrappers/ThemeToggle.astro';
import '@styles/global.css';
---

<Main>
  <Section slot="section">
    <WebsiteHeader slot="websiteHeader"/>
    <BlogCarousel slot="blogCarousel" />
  </Section>
  <Aside slot="aside">
    <ThemeToggle slot="theme-toggle" />
    <WebsiteNavbar slot="website-navbar" />
  </Aside>
</Main>

<script type="module" src="/src/scripts/animations/blogTransition.ts"></script>